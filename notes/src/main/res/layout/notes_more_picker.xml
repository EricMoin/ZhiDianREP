<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/notes_more_picker_shape"
    android:layout_gravity="center"
    android:layout_width="320dp"
    android:layout_height="200dp">
    <TextView
        android:text="自定义时间段"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="开始时间"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/date_more_start_shape"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="30dp">
                <EditText
                    android:background="@color/white"
                    android:id="@+id/dateStartYearText"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:text="年"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/date_more_start_shape"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="30dp">
                <EditText
                    android:background="@color/white"
                    android:id="@+id/dateStartMonthText"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:text="月"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:divider="@drawable/divider"
        android:showDividers="end"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="结束时间"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/date_more_start_shape"
                android:layout_weight="3"
                android:gravity="center"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="30dp">
                <EditText
                    android:background="@color/white"
                    android:id="@+id/dateEndYearText"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:text="年"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/date_more_start_shape"
                android:layout_weight="3"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="30dp">
                <EditText
                    android:background="@color/white"
                    android:id="@+id/dateEndMonthText"
                    android:gravity="center"
                    android:maxLines="1"
                    android:layout_margin="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <TextView
                android:text="月"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:divider="@drawable/divider"
        android:showDividers="middle"
        android:dividerPadding="1dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/dateMoreCancel"
            android:text="取消"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/dateMoreEnsure"
            android:text="确定"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>