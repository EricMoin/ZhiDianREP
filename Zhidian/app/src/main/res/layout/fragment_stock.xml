<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.self.StockFragment">
    <include layout="@layout/self_select_sub_title"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selfRecyclerView"
        android:overScrollMode="never"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/companyName"
            android:text="上证指数"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
            android:text="休市"
            android:textSize="12sp"
            android:textColor="@color/label_grey"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/company_status"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toTopOf="@id/companyName"
            app:layout_constraintBottom_toBottomOf="@id/companyName"
            app:layout_constraintStart_toEndOf="@id/companyName"
            />
        <TextView
            android:id="@+id/headData"
            android:text="2915.93"
            android:textSize="14sp"
            android:textColor="@color/data_green"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/secondData"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/secondData"
            android:text="-66.97"
            android:textSize="14sp"
            android:textColor="@color/data_green"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/thirdData"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/thirdData"
            android:text="-2.25%"
            android:textSize="14sp"
            android:textColor="@color/data_green"
            android:textStyle="bold"
            android:background="@drawable/btom_label_shape"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/panelBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/panelBtn"
            android:src="@drawable/expand_pic"
            android:layout_gravity="end"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>