<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btom_chart_shape"
    android:layout_width="match_parent"
    android:layout_height="180dp">
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chartDivider"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/chartDivider"
        app:layout_constraintTop_toBottomOf="@id/lineChart"
        app:layout_constraintBottom_toTopOf="@id/btomPanel"
        />
    <TextView
        android:id="@+id/dataText"
        android:text="上证指数"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/chartDivider"
        />
    <TextView
        android:id="@+id/headData"
        android:text="2915.93"
        android:textStyle="bold"
        android:textColor="@color/data_green"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/dataText"
        app:layout_constraintTop_toBottomOf="@id/dataText"
        />
    <TextView
        android:id="@+id/secondData"
        android:text="-66.97"
        android:textStyle="bold"
        android:textColor="@color/data_green"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/chartDivider"
        app:layout_constraintBottom_toTopOf="@id/panelDivider"
        />
    <TextView
        android:id="@+id/thirdData"
        android:text="-2.25%"
        android:textStyle="bold"
        android:textColor="@color/data_green"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/panelDivider"
        />
    <TextView
        android:id="@+id/doneAmountText"
        android:text="成交额"
        android:textSize="12sp"
        android:textColor="@color/label_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toTopOf="@id/panelDivider"
        app:layout_constraintEnd_toStartOf="@id/textDivider"
        />
    <TextView
        android:id="@+id/doneAmount"
        android:text="3649.22亿"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/panelDivider"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/doneDataText"
        android:text="成交量"
        android:textSize="12sp"
        android:textColor="@color/label_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/doneAmountText"
        app:layout_constraintEnd_toStartOf="@id/textDivider"
        />
    <TextView
        android:id="@+id/doneData"
        android:text="3.21亿手"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doneAmount"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/higherText"
        android:text="涨"
        android:textSize="12sp"
        android:textColor="@color/label_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/doneDataText"
        app:layout_constraintEnd_toStartOf="@id/textDivider"
        />
    <TextView
        android:id="@+id/higher"
        android:text="787家"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doneData"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/equalText"
        android:text="平"
        android:textSize="12sp"
        android:textColor="@color/label_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/higherText"
        app:layout_constraintEnd_toStartOf="@id/textDivider"
        />
    <TextView
        android:id="@+id/equal"
        android:text="68家"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/higher"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/downText"
        android:text="跌"
        android:textSize="12sp"
        android:textColor="@color/label_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/equalText"
        app:layout_constraintEnd_toStartOf="@id/textDivider"
        />
    <TextView
        android:id="@+id/down"
        android:text="1301家"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/equal"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/chartDivider"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.64"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/textDivider"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.78"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/panelDivider"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        />
    <LinearLayout
        android:id="@+id/btomPanel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:id="@+id/companyLabel1"
            android:text="上"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/orange"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/companyLabel2"
            android:text="深"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#D2D2D2"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/companyLabel3"
            android:text="创"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="#D2D2D2"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>