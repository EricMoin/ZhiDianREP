<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/imgSubText"
        android:text="分时图"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/imgSub"
        android:src="@drawable/img_sub_pic"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgSubText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/priceSubText"
        android:text="最新价"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <FrameLayout
        android:id="@+id/priceFrame"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toEndOf="@id/priceSubText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/priceSubUp"
            android:src="@drawable/up_vector_pic"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="top"
            />
        <ImageView
            android:id="@+id/priceSubDown"
            android:src="@drawable/down_vector_pic"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/rangeSubText"
        android:text="涨跌幅"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/rangeFrame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <FrameLayout
        android:id="@+id/rangeFrame"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/rangeSubUp"
            android:src="@drawable/up_vector_pic"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="top"
            />
        <ImageView
            android:id="@+id/rangeSubDown"
            android:src="@drawable/down_vector_pic"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="bottom"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>