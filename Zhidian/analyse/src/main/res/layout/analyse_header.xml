<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="500dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:text="上升趋势"
                android:textSize="27sp"
                android:textStyle="bold"
                android:textColor="#E24141"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:layout_gravity="start|center"
                android:layout_width="wrap_content"
                android:layout_height="0dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:text="最近更新时间："
                    android:textColor="#D2D2D2"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="start|center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
                <TextView
                    android:text="2022-12-30 15:00"
                    android:textColor="#D2D2D2"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="start|center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/analyseShortTrendBtn"
            android:text="短期趋势"
            android:textColor="#F88C3A"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/short_trend_slc"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/analyseMiddleTrendBtn"
            android:text="中期趋势"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/short_trend_uslc"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <View
        android:background="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:drawableLeft="@drawable/press_up_layer"
                android:text="307.11"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:drawableLeft="@drawable/press_now_layer"
                android:text="-0.31%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#21A538"
                android:padding="10dp"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:drawableLeft="@drawable/press_up_layer"
                android:text="307.11"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:padding="10dp"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <TextView
                android:drawableLeft="@drawable/press_now_layer"
                android:text="-0.31%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#21A538"
                android:padding="10dp"
                android:gravity="center|end"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
        </LinearLayout>
    </LinearLayout>
    <com.github.mikephil.charting.charts.CandleStickChart
        android:id="@+id/analyseHeaderChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>