<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/itemUserCheckBox"
        android:buttonTint="@color/black"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/itemUserName"
        android:text="刘强"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="start|center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/itemUserData"
        android:text="9376.84"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/itemTopButton"
        android:src="@drawable/top_pic"
        android:gravity="center"
        android:layout_weight="1"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/itemSortButton"
        android:src="@drawable/menu_pic"
        android:gravity="center"
        android:padding="18dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
</LinearLayout>