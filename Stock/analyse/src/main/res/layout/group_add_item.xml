<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <com.google.android.material.card.MaterialCardView
        android:background="@color/white"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:strokeColor="#D2D2D2"
        app:cardElevation="0dp"
        app:strokeWidth="2px"
        >
        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/groupAddItemIcon"
                android:src="@drawable/default_avatar_pic"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/groupAddItemName"
                    android:text="刘强"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:id="@+id/groupAddItemData"
                    android:text="114.514"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:drawableStart="@drawable/data_icon_layer"
                    android:gravity="start|center"
                    android:drawablePadding="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <Button
                android:text="关注"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/radius_button_shape"
                android:layout_width="70dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>