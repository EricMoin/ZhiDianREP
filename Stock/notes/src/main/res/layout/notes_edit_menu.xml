<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/notesEditMenu"
    android:background="@color/white"
    android:orientation="horizontal"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageView
        android:src="@drawable/font_pic"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <ImageView
        android:src="@drawable/camera_pic"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/notesEditInsertImage"
        android:src="@drawable/album_pic"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <View
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        />
    <Button
        android:id="@+id/notesEditFinishButton"
        android:background="@drawable/finish_bottom_radius"
        android:text="完成"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:layout_width="60dp"
        android:layout_height="30dp"/>
</LinearLayout>