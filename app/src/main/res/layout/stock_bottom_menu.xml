<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="@drawable/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/stockMenuComment"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/comment_layer"
            android:text="评论"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/stockMenuNotes"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/notes_layer"
            android:text="笔记"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/stockMenuRing"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ring_layer"
            android:text="提醒"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/stockMenuShare"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/share_layer"
            android:text="分享"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/stockMenuContrast"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/contrast_layer"
            android:text="对比"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/stockMenuMore"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/more_layer"
            android:text="更多"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <View
            android:layout_margin="8dp"
            android:background="@drawable/divider"
            android:layout_width="5px"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/stockMenuChase"
            android:background="@drawable/radius_button_shape"
            android:text="模拟交易"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</FrameLayout>